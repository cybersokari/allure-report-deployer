{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["./test","jest.config.ts"]
}